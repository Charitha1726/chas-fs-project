<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Handmade Elegance - Products</title>
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display&display=swap" rel="stylesheet" />
  <style>
    body {
      font-family: 'Playfair Display', serif;
      max-width: 900px;
      margin: 20px auto;
      padding: 0 20px;
      background: #fff8f0;
      color: #5a3e2b;
    }
    h1 {
      text-align: center;
      font-weight: 700;
      margin-bottom: 40px;
    }
    .product {
      border-bottom: 1px solid #d2b48c;
      padding: 15px 0;
    }
    .product img {
      max-width: 120px;
      border-radius: 8px;
      float: right;
      margin-left: 20px;
    }
    .add-btn {
      display: block;
      width: 140px;
      margin: 20px auto;
      padding: 10px 15px;
      background-color: #8b5e3c;
      color: white;
      text-decoration: none;
      text-align: center;
      border-radius: 6px;
      font-weight: 600;
    }
  </style>
</head>
<body>
  <h1>Handmade Elegance Products</h1>
  <a href="/products/new" class="add-btn">Add New Product</a>
  <% products.forEach(product => { %>
    <div class="product">
      <h2><%= product.name %> â€” $<%= product.price %></h2>
      <p><%= product.description %></p>
      <% if (product.image) { %>
        <img src="<%= product.image %>" alt="<%= product.name %>"/>
      <% } %>
      <div style="clear:both"></div>
    </div>
  <% }) %>
</body>
</html>
